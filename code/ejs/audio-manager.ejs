<div class="container-fluid">
    <div class="jumbotron row pt-4 pb-4 mb-1 mt-1" style="word-wrap: break-word">
        <h2>Audio Manager</h2>
    </div>
    <div class="jumbotron row pt-4 pb-4 mb-3" style="word-wrap: break-word">
        <h2 class="text-center col-12" id="audio-title">No audio is playing</h2>
    </div>
    <div class="row pl-3 pr-0" style="width: 100%;height: 40vw">
        <div id="manager" class="col-lg-3 col-sm-12 mb-4">
        </div>
        <div id="audio-container" class="col-lg-9 col-sm-12 mb-5" style="width: 100%;height: 100%">
            <i id="delete-icon" class="fa fa-close delete-icon" style="font-size: 4vw"></i>
            <audio id="audio" controls style="width: 100%;height: 100%;border: 1px solid black;border-radius: 5px;background-image: url('/images/waterfall.gif');background-size: 100% 100%">
                <source id="audio-source" src="">
            </audio>
        </div>
    </div>
</div>

<div id="delete-audio-popper-container" class="container-fluid">
    <div id="delete-audio-popper" class="container-fluid">
        <div class="row">
            <h1 class="text-info delete-audio-text">Are you sure you want to delete this audio !</h1>
        </div><br><br><br>
        <div class="row">
            <button type="button" onclick="deleteAudio()" class="btn btn-success col-lg-5">Delete</button>
            <div class="col-lg-2" style="height: 2.5vw"></div>
            <button id="hideDeleteAudio" type="button" onclick="hideDeleteAudioPopper()" class="btn btn-danger col-lg-5">Cancel</button>
        </div>
    </div>
</div>

<div style="width: 100vw;height: 4vw"></div>

